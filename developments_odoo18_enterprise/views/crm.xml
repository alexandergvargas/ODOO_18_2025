<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inherit_crm_lead_odoo_18" model="ir.ui.view">
        <field name="name">crm.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='phone']" position="before">
                <label for="tipo_cliente" class="oe_inline"/>
                <div>
                    <field name="tipo_cliente"/>
                </div>
                <label for="visitado" class="oe_inline"/>
                <div>
                    <field name="visitado"/>
                </div>

            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_marcar_true" string="Marcar Check"
                        type="object" class="btn-primary"/>
            </xpath>
        </field>
    </record>


</odoo>